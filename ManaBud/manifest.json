{
	"manifest_version": 2,
	"name": "ManaBud",
	"version": "1.0",
	"description": "This Extension tracks your overall spendings. ",
	"icon": {
		"128": "icon192.png",
		"48": "icon48.png",
		"16": "icon16.png"
	},
	"browser_action": {
		"default_icon": "icon16.png",
		"default_popup": "budget.html"
	},

	"options_page": "pages/options.html",
     "background": {
        "scripts": ["eventPage.js"],
		"persistent": false
	 },
	"permissions": ["storage", "notifications","contextMenus"]
}
